<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionsActivity">

    <TextView
        android:id="@+id/permissionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Permissions"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locationPermissionTextView"
        android:layout_width="193dp"
        android:layout_height="64dp"
        android:layout_below="@id/permissionsTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/locationPermissionSwitch"
        android:text="Location Permission"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/locationPermissionSwitch"
        android:layout_width="106dp"
        android:layout_height="42dp"
        android:layout_below="@id/permissionsTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="72dp"
        android:enabled="false" />

    <TextView
        android:id="@+id/bluetoothPermissionTextView"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_below="@id/locationPermissionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/bluetoothPermissionSwitch"
        android:text="Bluetooth Permission"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/bluetoothPermissionSwitch"
        android:layout_width="103dp"
        android:layout_height="54dp"
        android:layout_below="@id/locationPermissionSwitch"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="64dp"
        android:enabled="false" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:enabled="false"/>
</RelativeLayout>
